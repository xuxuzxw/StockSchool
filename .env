# StockSchool 量化投研系统环境变量配置
# ================================
# 数据库配置
# ================================
POSTGRES_HOST=postgres
POSTGRES_PORT=15432
POSTGRES_DB=stockschool
POSTGRES_USER=stockschool
POSTGRES_PASSWORD=stockschool123

# ================================
# Redis配置
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# ================================
# 数据源API配置
# ================================
# Tushare API Token (请替换为您的真实Token)
TUSHARE_TOKEN=6e649887d5b51f0f7384625f3bc048a834c33763dc32c8fdc410c654

# Akshare API Token (如果需要)
AKSHARE_TOKEN=your_akshare_token_here

# ================================
# 应用配置
# ================================
APP_NAME=StockSchool
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# 应用端口配置
APP_PORT=8000
DASHBOARD_PORT=8080
API_PORT=5000

# ================================
# 安全配置
# ================================
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# ================================
# 监控配置
# ================================
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin123
PROMETHEUS_PORT=9090
FLOWER_PORT=5555

# ================================
# Nginx配置
# ================================
NGINX_PORT=80
NGINX_SSL_PORT=443

# ================================
# 数据获取配置
# ================================
# 数据更新频率（分钟）
DATA_UPDATE_INTERVAL=60

# 历史数据回溯天数
HISTORY_DAYS=1000

# 并发请求数限制
MAX_CONCURRENT_REQUESTS=10

# 请求间隔（秒）
REQUEST_INTERVAL=0.2

# ================================
# 因子计算配置
# ================================
# 因子计算周期（天）
FACTOR_CALCULATION_PERIOD=1

# 因子回测周期（天）
FACTOR_BACKTEST_PERIOD=252

# 因子评分更新频率（小时）
FACTOR_SCORE_UPDATE_INTERVAL=6

# ================================
# 缓存配置
# ================================
# 缓存过期时间（秒）
CACHE_EXPIRE_TIME=3600

# 缓存键前缀
CACHE_KEY_PREFIX=stockschool

# ================================
# 文件存储配置
# ================================
# 数据文件存储路径
DATA_PATH=./data

# 日志文件存储路径
LOG_PATH=./logs

# 缓存文件存储路径
CACHE_PATH=./cache

# 配置文件存储路径
CONFIG_PATH=./config

# ================================
# 邮件配置（可选）
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_TLS=true

# ================================
# 钉钉/企业微信通知配置（可选）
# ================================
DINGTALK_WEBHOOK=your-dingtalk-webhook-url
WECOM_WEBHOOK=your-wecom-webhook-url

# ================================
# 机器学习配置
# ================================
# 模型训练数据集大小
ML_DATASET_SIZE=10000

# 模型训练批次大小
ML_BATCH_SIZE=32

# 模型训练轮数
ML_EPOCHS=100

# 模型验证集比例
ML_VALIDATION_SPLIT=0.2

# ================================
# 性能配置
# ================================
# 数据库连接池大小
DB_POOL_SIZE=20

# 数据库连接池最大溢出
DB_POOL_MAX_OVERFLOW=30

# 数据库连接超时（秒）
DB_POOL_TIMEOUT=30

# 工作进程数
WORKER_PROCESSES=4

# 每个进程的线程数
WORKER_THREADS=2

# ================================
# 开发配置
# ================================
# 是否启用热重载
RELOAD=true

# 是否启用调试模式
DEBUG_MODE=true

# 是否启用性能分析
PROFILING=false

# ================================
# 测试配置
# ================================
# 测试数据库配置
TEST_POSTGRES_DB=stockschool_test
TEST_POSTGRES_USER=stockschool_test
TEST_POSTGRES_PASSWORD=test123

# 测试Redis配置
TEST_REDIS_DB=1

