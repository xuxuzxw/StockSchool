# StockSchool 生产环境配置示例
# 复制此文件为 .env 并填入实际值

# =============================================================================
# 数据库配置
# =============================================================================
POSTGRES_DB=stockschool
POSTGRES_USER=stockschool
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_REPLICA_PASSWORD=your_replica_password_here

# 数据库连接池配置
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# Redis配置
# =============================================================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379
REDIS_MAX_CONNECTIONS=50

# =============================================================================
# 应用配置
# =============================================================================
# 数据源API令牌
TUSHARE_TOKEN=your_tushare_token_here

# 应用安全配置
SECRET_KEY=your_secret_key_here_at_least_32_characters_long
ENVIRONMENT=production
LOG_LEVEL=INFO

# API服务配置
API_WORKERS=4
API_MAX_REQUESTS=1000
API_MAX_REQUESTS_JITTER=100
API_TIMEOUT=30

# 数据同步配置
SYNC_SCHEDULE=0 2 * * *
SYNC_BATCH_SIZE=1000
SYNC_RETRY_TIMES=3
SYNC_RETRY_DELAY=60

# =============================================================================
# 监控配置
# =============================================================================
# Grafana配置
GRAFANA_PASSWORD=your_grafana_admin_password_here
GRAFANA_SECRET_KEY=your_grafana_secret_key_here

# Prometheus配置
PROMETHEUS_RETENTION_TIME=30d
PROMETHEUS_RETENTION_SIZE=10GB

# =============================================================================
# 告警配置
# =============================================================================
# SMTP邮件配置
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=alerts@example.com
SMTP_PASSWORD=your_smtp_password_here

# 告警接收邮箱
DEFAULT_ALERT_EMAIL=admin@example.com
CRITICAL_ALERT_EMAIL=critical@example.com
WARNING_ALERT_EMAIL=warning@example.com
DATASYNC_ALERT_EMAIL=datasync@example.com
DATABASE_ALERT_EMAIL=database@example.com

# Webhook配置
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
CRITICAL_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/CRITICAL/WEBHOOK
WEBHOOK_TOKEN=your_webhook_token_here

# =============================================================================
# SSL/TLS配置
# =============================================================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_PROTOCOLS=TLSv1.2 TLSv1.3

# =============================================================================
# 备份配置
# =============================================================================
BACKUP_RETENTION_DAYS=7
BACKUP_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/BACKUP/WEBHOOK
BACKUP_EMAIL=backup@example.com

# 备份存储配置
BACKUP_S3_BUCKET=stockschool-backups
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key

# =============================================================================
# 外部服务配置
# =============================================================================
# 对象存储配置（可选）
S3_BUCKET=stockschool-data
S3_REGION=us-east-1
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key

# CDN配置（可选）
CDN_URL=https://cdn.stockschool.com

# =============================================================================
# 性能优化配置
# =============================================================================
# 缓存配置
CACHE_DEFAULT_TIMEOUT=300
CACHE_MAX_ENTRIES=10000

# 并发配置
MAX_WORKERS=8
ASYNC_POOL_SIZE=100

# 数据处理配置
CHUNK_SIZE=10000
BATCH_INSERT_SIZE=1000

# =============================================================================
# 安全配置
# =============================================================================
# 访问控制
ALLOWED_HOSTS=localhost,stockschool.com,*.stockschool.com
CORS_ORIGINS=https://stockschool.com,https://app.stockschool.com

# 限流配置
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# JWT配置
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# 日志配置
# =============================================================================
LOG_FORMAT=json
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=5
LOG_RETENTION_DAYS=30

# Syslog配置（可选）
SYSLOG_HOST=localhost
SYSLOG_PORT=514
SYSLOG_FACILITY=local0

# =============================================================================
# 第三方集成配置
# =============================================================================
# 钉钉机器人（可选）
DINGTALK_WEBHOOK=https://oapi.dingtalk.com/robot/send?access_token=YOUR_TOKEN
DINGTALK_SECRET=your_dingtalk_secret

# 企业微信（可选）
WECHAT_WEBHOOK=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=YOUR_KEY

# =============================================================================
# 开发和调试配置（生产环境请设置为false）
# =============================================================================
DEBUG=false
ENABLE_PROFILING=false
ENABLE_METRICS=true
ENABLE_TRACING=false

# =============================================================================
# 容器资源限制
# =============================================================================
# API服务资源限制
API_MEMORY_LIMIT=2G
API_CPU_LIMIT=1.0

# 数据同步服务资源限制
DATASYNC_MEMORY_LIMIT=2G
DATASYNC_CPU_LIMIT=1.5

# 数据库资源限制
POSTGRES_MEMORY_LIMIT=4G
POSTGRES_CPU_LIMIT=2.0

# Redis资源限制
REDIS_MEMORY_LIMIT=1G
REDIS_CPU_LIMIT=0.5

# =============================================================================
# 健康检查配置
# =============================================================================
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=60s

# =============================================================================
# 网络配置
# =============================================================================
NETWORK_SUBNET=172.20.0.0/16
NETWORK_GATEWAY=172.20.0.1

# =============================================================================
# 时区配置
# =============================================================================
TZ=Asia/Shanghai
TIMEZONE=Asia/Shanghai