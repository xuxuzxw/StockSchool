[MASTER]
# Python代码格式化配置文件
# 基于PEP 8规范，针对StockSchool项目定制

[FORMAT]
# 缩进使用4个空格
indent-string='    '
# 最大行长度
max-line-length=120
# 允许的多行字符串引号
docstring-quotes=double

[MESSAGES CONTROL]
# 禁用的检查规则
disable=
    missing-docstring,  # 允许没有文档字符串
    too-few-public-methods,  # 允许少量公共方法
    too-many-arguments,  # 允许较多参数
    too-many-instance-attributes,  # 允许较多实例属性
    too-many-lines,  # 允许较长文件
    too-many-locals,  # 允许较多局部变量
    too-many-branches,  # 允许较多分支
    too-many-statements,  # 允许较多语句
    too-many-return-statements,  # 允许较多返回语句
    import-error,  # 允许导入错误（动态路径）
    cyclic-import,  # 允许循环导入
    unused-import,  # 允许未使用导入
    unused-variable,  # 允许未使用变量
    unused-argument,  # 允许未使用参数
    protected-access,  # 允许访问受保护成员
    broad-except,  # 允许宽泛异常
    bare-except,  # 允许裸异常
    line-too-long,  # 允许长行

[DESIGN]
# 设计相关配置
max-args=15
max-locals=25
max-returns=10
max-branches=20
max-statements=100
max-parents=7
max-attributes=15
max-public-methods=25
max-module-lines=2000

[CLASSES]
# 类相关配置
valid-classmethod-first-arg=cls
valid-metaclass-classmethod-first-arg=mcs

[IMPORTS]
# 导入相关配置
allow-wildcard-with-all=no
analyse-fallback-blocks=no

[EXCEPTIONS]
# 异常相关配置
overgeneral-exceptions=builtins.Exception

[BASIC]
# 基础配置
good-names=i,j,k,ex,Run,_,df,x,y,z
bad-names=foo,bar,baz,toto,tutu,tata
name-group=
include-naming-hint=no
property-classes=abc.abstractproperty
function-rgx=[a-z_][a-z0-9_]{2,50}$
variable-rgx=[a-z_][a-z0-9_]{2,30}$
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$
attr-rgx=[a-z_][a-z0-9_]{2,30}$
argument-rgx=[a-z_][a-z0-9_]{2,30}$
class-attribute-rgx=([A-Za-z_][A-Za-z0-9_]{2,30}|(__.*__))$
inlinevar-rgx=[A-Za-z_][A-Za-z0-9_]*$
class-rgx=[A-Z_][a-zA-Z0-9]+$
module-rgx=(([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$
method-rgx=[a-z_][a-z0-9_]{2,50}$